<h1>New user</h1>

<%= error_messages_for @user %>
<%= form_for @user, :action => url(:controller => "users") do %>
	<div><%= text_field :name, :label => 'Name' %></div>
	<div><%= text_field :email, :label => 'Email' %></div>
	<div><%= text_field :login, :label => 'Login' %></div>
	<div><%= password_field :password, :label  => 'Password' %></div>
	<div><%= password_field :password_confirmation, :label  => 'Password again' %></div>
	<%= submit "submit" %>
<% end =%>
